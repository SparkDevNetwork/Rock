{% capture cardMarkup %}
<div class="row d-flex flex-wrap">
    <div class="col-xs-12 col-sm-6 mb-4">
        <div class="mb-3">
            <code>.backdrop + .backdrop-left + .backdrop-primary</code>
        </div>
        <div class="backdrop backdrop-left backdrop-primary rounded-md">
            <img src="https://via.placeholder.com/400x225" alt="" class="img-responsive">
        </div>
    </div>
    <div class="col-xs-12 col-sm-6 mb-4">
        <div class="mb-3">
            <code>.backdrop + .backdrop-right + .backdrop-primary</code>
        </div>
        <div class="backdrop backdrop-right backdrop-primary rounded-md">
            <img src="https://via.placeholder.com/400x225" alt="" class="img-responsive">
        </div>
    </div>
</div>
{% endcapture %}

<div class="card mb-4" id="alignment">
    <div class="card-header">
        <h4 class="m-0">Alignment</h4>
    </div>
    <div class="card-body">
        {{ cardMarkup }}
    </div>
    <div class="card-footer">
        <pre><code>{{ cardMarkup | Trim | Escape }}</code></pre>
    </div>
</div>

