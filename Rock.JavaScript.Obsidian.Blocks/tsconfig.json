{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "rootDir": "../",
    "incremental": true,
    "noImplicitAny": false,
    "noImplicitOverride": true,
    "noEmitOnError": false,
    "removeComments": true,
    "allowUnreachableCode": false,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "target": "ES2016",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "importHelpers": true,
    "jsx": "preserve",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2016",
      "ES2020.Symbol.WellKnown"
    ],
    "paths": {
      "@Obsidian/Controls/*": [ "../Rock.JavaScript.Obsidian/Framework/Controls/*" ],
      "@Obsidian/Core/*": [ "../Rock.JavaScript.Obsidian/Framework/Core/*" ],
      "@Obsidian/Directives/*": [ "../Rock.JavaScript.Obsidian/Framework/Directives/*" ],
      "@Obsidian/Enums/*": [ "../Rock.JavaScript.Obsidian/Framework/Enums/*" ],
      "@Obsidian/FieldTypes/*": [ "../Rock.JavaScript.Obsidian/Framework/FieldTypes/*" ],
      "@Obsidian/Libs/*": [ "../Rock.JavaScript.Obsidian/Framework/Libs/*" ],
      "@Obsidian/PageState": [ "../Rock.JavaScript.Obsidian/Framework/PageState" ],
      "@Obsidian/SystemGuids/*": [ "../Rock.JavaScript.Obsidian/Framework/SystemGuids/*" ],
      "@Obsidian/Templates/*": [ "../Rock.JavaScript.Obsidian/Framework/Templates/*" ],
      "@Obsidian/Types": [ "../Rock.JavaScript.Obsidian/Framework/Types" ],
      "@Obsidian/Types/*": [ "../Rock.JavaScript.Obsidian/Framework/Types/*" ],
      "@Obsidian/Utility": [ "../Rock.JavaScript.Obsidian/Framework/Utility" ],
      "@Obsidian/Utility/*": [ "../Rock.JavaScript.Obsidian/Framework/Utility/*" ],
      "@Obsidian/ValidationRules": [ "../Rock.JavaScript.Obsidian/Framework/ValidationRules" ],
      "@Obsidian/ViewModels/*": [ "../Rock.JavaScript.Obsidian/Framework/ViewModels/*" ]
    }
  },
  "references": [
    { "path": "../Rock.JavaScript.Obsidian/Framework/Controls" },
    { "path": "../Rock.JavaScript.Obsidian/Framework/Core" },
    { "path": "../Rock.JavaScript.Obsidian/Framework/Directives" },
    { "path": "../Rock.JavaScript.Obsidian/Framework/Enums" },
    { "path": "../Rock.JavaScript.Obsidian/Framework/FieldTypes" },
    { "path": "../Rock.JavaScript.Obsidian/Framework/Libs" },
    { "path": "../Rock.JavaScript.Obsidian/Framework/PageState" },
    { "path": "../Rock.JavaScript.Obsidian/Framework/SystemGuids" },
    { "path": "../Rock.JavaScript.Obsidian/Framework/Templates" },
    { "path": "../Rock.JavaScript.Obsidian/Framework/Utility" },
    { "path": "../Rock.JavaScript.Obsidian/Framework/ValidationRules" }
  ],
  "vueCompilerOptions": {
    "extensions": [
      ".obs"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.obs"
  ],
  "exclude": [
    "./Tests/**/*"
  ]
}
