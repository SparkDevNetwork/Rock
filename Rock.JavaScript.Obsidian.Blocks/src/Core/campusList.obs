<template>
    <Grid :definition="config.gridDefinition ?? undefined"
          :data="gridDataSource"
          keyField="idKey"
          itemTerm="Campus"
          :entityTypeGuid="EntityType.Campus"
          stickyHeader
          liveUpdates
          :onAddItem="config.isAddEnabled ? onAddItem : undefined"
          @selectItem="onSelectItem"
          :showLaunchWorkflow="false" >
        <ReorderColumn :onOrderChanged=onOrderChanged />
        <TextColumn name="name"
                    title="Name"
                    field="name"
                    :filter="textValueFilter"
                    visiblePriority="xs" />

        <TextColumn name="shortCode"
                    title="Short Code"
                    field="shortCode"
                    :filter="textValueFilter"
                    visiblePriority="lg" />

        <LabelColumn name="shortCode"
                    title="Short Code"
                    field="shortCode"
                    :filter="textValueFilter"
                    :colorSource="campusShortCodeLabelColors"
                    visiblePriority="lg" />

        <TextColumn name="phoneNumber"
                    title="Phone Number"
                    field="phoneNumber"
                    :filter="textValueFilter"
                    visiblePriority="sm" />

        <PersonColumn name="leader"
                      title="Campus Leader"
                      field="leader"
                      :filter="pickExistingValueFilter"
                      visiblePriority="sm" />

        <TextColumn name="campusType"
                    title="Campus Type"
                    field="campusType"
                    :filter="pickExistingValueFilter"
                    visiblePriority="md" />

        <Column name="campusStatus"
                title="Campus Status"
                field="campusStatus"
                :filter="pickExistingValueFilter"
                visiblePriority="md">
            <template #format="{ row }">
                <div v-if="row.campusStatus" :class="'label label-' + (campusStatusLabelColors[row.campusStatusGuid] ?? 'default')">
                    {{ row.campusStatus }}
                </div>
            </template>

            <template #skeleton>
                <div class="skeleton skeleton-text skeleton-rounded" />
            </template>
        </Column>

        <BooleanColumn name="isActive"
                       title="Is Active"
                       field="isActive"
                       visiblePriority="xs" />

        <Column name="Id"
                title="Id"
                field="Id"
                :hideOnScreen="true" />

        <AttributeColumns :attributes="config.gridDefinition?.attributeFields ?? []" />

        <DeleteColumn v-if="config.isDeleteEnabled" @click="onDeleteClick" />
    </Grid>
</template>

<script setup lang="ts">
    import { useConfigurationValues, useInvokeBlockAction } from "@Obsidian/Utility/block";
    import { EntityType } from "@Obsidian/SystemGuids/entityType";
    import { DefinedValue } from "@Obsidian/SystemGuids/definedValue";
    import Grid, { AttributeColumns, BooleanColumn, Column, PersonColumn, pickExistingValueFilter, TextColumn, textValueFilter, DeleteColumn, ReorderColumn, LabelColumn } from "@Obsidian/Controls/grid";
    import { alert } from "@Obsidian/Utility/dialogs";
    import { ListBlockBox } from "@Obsidian/ViewModels/Blocks/listBlockBox";
    import { CampusListOptionsBag } from "@Obsidian/ViewModels/Blocks/Core/CampusList/campusListOptionsBag";
    import { GridDataBag } from "@Obsidian/ViewModels/Core/Grid/gridDataBag";
    import { CampusBag } from "@Obsidian/ViewModels/Blocks/Core/CampusDetail/campusBag";
    import { ListItemBag } from "@Obsidian/ViewModels/Utility/listItemBag";
    import { NavigationUrlKey } from "./CampusList/types.partial";
    import { reactive, ref, computed } from "vue";

    const config = useConfigurationValues<ListBlockBox<CampusListOptionsBag>>();
    const invokeBlockAction = useInvokeBlockAction();

    // #region Values

    const gridDataSource = ref<Promise<GridDataBag>>();
    let gridData: GridDataBag | undefined;

    const campusStatusLabelColors = ref<Record<string, string>>({
        [DefinedValue.CampusStatusOpen]: "info",
        [DefinedValue.CampusStatusPending]: "warning"
    });
    
    const campusShortCodeLabelColors = ref<Record<string, string>>({});

    // #endregion

    // #region Functions

    /**
     * Called when the grid is requesting the row data be loaded.
     */
    async function loadGridData(): Promise<GridDataBag> {
        const result = await invokeBlockAction<GridDataBag>("GetGridData");

        if (result.isSuccess && result.data) {
            gridData = reactive(result.data);
            let items: Record<string, string> = {};
            gridData.rows?.forEach(row => {
                let campus = row as CampusBag;
                let color = row.color as ListItemBag;
                if(campus.shortCode && color.value ) {
                    items[campus.shortCode] = color.value;
                }
            })
            campusShortCodeLabelColors.value = items;
            return gridData;
        }
        else {
            throw new Error(result.errorMessage ?? "Unknown error while trying to load grid data.");
        }
    }

    // #endregion

    // #region Event Handlers

    /**
     * Called when a row has been selected by the individual.
     *
     * @param key The key of the row that was selected.
     */
    function onSelectItem(key: string): void {
        if (config.navigationUrls?.[NavigationUrlKey.DetailPage]) {
            window.location.href = config.navigationUrls[NavigationUrlKey.DetailPage].replace("((Key))", key);
        }
    }

    /**
     * Called when a row has been dragged from one position to a new position.
     *
     * @param item The item that was moved to a new position.
     * @param beforeItem The item that the first item was dropped before.
     *
     * @returns `true` if the operation succeeded; otherwise `false`.
     */
     async function onOrderChanged(item: Record<string, unknown>, beforeItem: Record<string, unknown> | null): Promise<boolean> {
        const result = await invokeBlockAction<string>("ReorderItem", {
            key: item["idKey"],
            beforeKey: beforeItem?.["idKey"] ?? null
        });

        return result.isSuccess;
    }

    /**
     * Called when a row's delete button has been clicked by the individual. This
     * happens only if they have confirmed the delete action.
     */
    async function onDeleteClick(key: string): Promise<void> {
        const result = await invokeBlockAction<string>("Delete", {
            key
        });

        if (result.isSuccess) {
            if (gridData && gridData.rows) {
                const index = gridData.rows.findIndex(r => r["idKey"] === key);

                if (index !== -1) {
                    gridData.rows?.splice(index, 1);
                }
            }
        }
        else {
            await alert(result.errorMessage ?? "Unknown error while trying to delete campus.");
        }
    }

    /**
     * Called when the Add button has been clicked by the indivual.
     */
    function onAddItem(): void {
        if (config.navigationUrls?.[NavigationUrlKey.DetailPage]) {
            window.location.href = config.navigationUrls[NavigationUrlKey.DetailPage].replace("((Key))", "0");
        }
    }

    // #endregion

    gridDataSource.value = loadGridData();
</script>
