    position: fixed;
    left: 22.5%;
    top: 25%;
    width: 55%;
    height: 55%;
    overflow-y: auto;
    z-index: 1060;
    box-shadow:0 5px 15px rgba(0,0,0,0.5);
    border-radius: var(--rounded-small);
}

