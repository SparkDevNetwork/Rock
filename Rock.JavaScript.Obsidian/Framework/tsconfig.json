{
  "compilerOptions": {
    "outDir": "../dist/Framework",
    "rootDir": ".",
    "incremental": true,
    "noImplicitAny": false,
    "noImplicitOverride": true,
    "noEmitOnError": true,
    "removeComments": true,
    "allowUnreachableCode": false,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "target": "ES2016",
    "module": "System",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "lib": [
      "DOM",
      "ES2016",
      "ES2020.Symbol.WellKnown" /* Fixes compile issue in Vue declaration files, not actually in use. */
    ],
    "paths": {
      "@Obsidian/Enums/*": [ "./Enums/*" ],
      "@Obsidian/ViewModels/*": [ "./ViewModels/*" ],
      "@Obsidian/Types": [ "./Types" ],
      "@Obsidian/Types/*": [ "./Types/*" ]
    }
  },
  "exclude": [
    "./Tests/**/*"
  ]
}
