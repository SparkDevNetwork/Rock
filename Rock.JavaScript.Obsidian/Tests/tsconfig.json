{
  "extends": "../Framework/tsconfig.json",
  "compilerOptions": {
    "rootDir": "../",
    "outDir": "./",
    "noEmit": false,
    "module": "CommonJS",
    "baseUrl": "..",
    "paths": {
      "@Obsidian/Controls/*": [ "./Framework/Controls/*" ],
      "@Obsidian/Core/*": [ "./Framework/Core/*" ],
      "@Obsidian/Directives/*": [ "./Framework/Directives/*" ],
      "@Obsidian/Enums/*": [ "./Framework/Enums/*" ],
      "@Obsidian/FieldTypes/*": [ "./Framework/FieldTypes/*" ],
      "@Obsidian/PageState": [ "./Framework/PageState" ],
      "@Obsidian/SystemGuids": [ "./Framework/SystemGuids" ],
      "@Obsidian/SystemGuids/*": [ "./Framework/SystemGuids/*" ],
      "@Obsidian/Types": [ "./Framework/Types" ],
      "@Obsidian/Types/*": [ "./Framework/Types/*" ],
      "@Obsidian/Utility": [ "./Framework/Utility" ],
      "@Obsidian/Utility/*": [ "./Framework/Utility/*" ],
      "@Obsidian/ValidationRules": [ "./Framework/ValidationRules" ],
      "@Obsidian/ViewModels/*": [ "./Framework/ViewModels/*" ]
    }
  },
  "include": [ "**/*.ts" ],
  "exclude": [ "**/*.ignored.ts" ]
}
