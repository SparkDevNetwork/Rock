<Window x:Class="Rock.Wpf.ErrorMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Error"
        Height="350"
        Width="448"
        ResizeMode="NoResize"
        FontFamily="./resources/#Open Sans Regular"
        FontSize="14"
        Background="#efefef"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary Source="StyleResources.xaml" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Style="{StaticResource rowDefinitionActions}" />
        </Grid.RowDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      Margin="5">
            <Label Name="lblErrorMessage"
                   Style="{StaticResource labelStyleAlertError}"
                   Content="An error has occurred while processing your request"
                   VerticalAlignment="Stretch" />
        </ScrollViewer>
        <Button Grid.Row="2"
                Name="OK"
                Margin="8"
                Style="{StaticResource buttonStylePrimary}"
                Content="OK"
                Width="72"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Click="OK_Click" />
    </Grid>
</Window>
