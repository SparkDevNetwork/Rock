<Page x:Class="Rock.PrinterProxy.Desktop.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Rock.PrinterProxy.Desktop.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Title="DashboardPage">

    <StackPanel Margin="42">
        <ui:InfoBar x:Name="ServiceState"
                    IsOpen="True"
                    IsClosable="False"
                    Title="Service State"
                    Margin="0,0,0,12" />

        <ui:Button x:Name="ServiceAction"
                   Appearance="Primary"
                   Click="ServiceAction_Click" />
    </StackPanel>
</Page>
