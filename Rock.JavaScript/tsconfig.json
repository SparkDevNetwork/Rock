{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "CommonJS",
    "target": "ES2016",
    "lib": [
      "ES2016",
      "DOM"
    ],
    "sourceMap": true,
    "strict": true,
    "rootDir": "src",
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react"
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}